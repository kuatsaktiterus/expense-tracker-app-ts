generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  username String    @unique
  password String
  token    String?
  Income   Income[]
  Expense  Expense[]

  @@map("users")
}

model Expense {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  expense         Int
  expense_name    String
  date_of_expense DateTime
  id_user         String   @db.ObjectId

  user User? @relation(fields: [id_user], references: [id])

  @@map("expenses")
}

model Income {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  income         Int
  income_name    String
  date_of_income DateTime
  id_user        String   @db.ObjectId

  user User? @relation(fields: [id_user], references: [id])

  @@map("incomes")
}

model Summary {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  incomes_total  Int
  expenses_total Int
  incomes_count  Int
  expenses_count Int

  @@map("summaries")
}
