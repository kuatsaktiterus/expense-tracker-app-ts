generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  username String     @unique
  password String
  token    String?
  Income   Income[]
  Expense  Expense[]
  Summary  Summary?
  Category Category[]

  @@map("users")
}

model Expense {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  expense         Int
  expense_name    String
  date_of_expense DateTime
  id_category     String   @db.ObjectId
  id_user         String   @db.ObjectId

  user     User?     @relation(fields: [id_user], references: [id])
  category Category? @relation(fields: [id_category], references: [id])

  @@map("expenses")
}

model Income {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  income         Int
  income_name    String
  date_of_income DateTime
  id_user        String   @db.ObjectId

  user User? @relation(fields: [id_user], references: [id])

  @@map("incomes")
}

model Summary {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  incomes_total  Int?
  expenses_total Int?
  incomes_count  Int?
  expenses_count Int?
  id_user        String @unique @db.ObjectId

  user User @relation(fields: [id_user], references: [id])

  @@map("summaries")
}

model Category {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  category String
  id_user  String @unique @db.ObjectId

  Expense Expense[]
  user    User?     @relation(fields: [id_user], references: [id])

  @@map("categories")
}
