generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String  @unique
  password String
  token    String?

  @@map("users")
}

model Expense {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  expense         Int
  expenses_name   String
  date_of_expense DateTime

  @@map("expenses")
}

model Income {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  income         Int
  incomes_name   String
  date_of_income DateTime

  @@map("incomes")
}

model Summary {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  incomes_total  Int
  expenses_total Int
  incomes_count  Int
  expenses_count Int

  @@map("summaries")
}
